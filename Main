LoadSettings()


LoadSettings()
{
	global Setting := []
	Loop, read, Settings.txt
	{
		StringSplit, Result, A_LoopReadLine, %A_Tab%
		Setting[A_Index] := Result1
	}
	global USERNAME := Setting[1] ; Name
	global SETONTOP := Setting[2] ; AlwaysOnTop
	global ENABLE_FILTER := Setting[3] ; Filter
}

